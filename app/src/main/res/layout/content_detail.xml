<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/detail_scene"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:id="@+id/content_detail_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_name_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="36dp"
                android:layout_weight="1"
                android:text="@string/download_name_label"
                android:textAlignment="textStart"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/download_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="36dp"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.5"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/default_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/download_status_label"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="36dp"
                android:layout_weight="1"
                android:text="@string/download_status_label"
                android:textAlignment="textStart"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/download_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="36dp"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.5"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/default_text_size" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>